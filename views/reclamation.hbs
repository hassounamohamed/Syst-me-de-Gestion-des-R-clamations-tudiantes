<h2 class="text-2xl font-bold mb-6 text-center">Liste des Réclamations</h2>

{{#if success}}
  <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
    <span class="block sm:inline">Votre réclamation a été enregistrée avec succès!</span>
  </div>
{{/if}}

{{#each reclamations}}
  <div class="bg-white p-6 mb-6 shadow rounded-lg">
    <div class="flex justify-between items-start">
      <div>
        <p class="font-semibold">Étudiant: {{prenom}} {{nom}}</p>
        <p class="text-gray-600">Carte: {{num_cart}}</p>
      </div>
      <span class="text-sm text-gray-500">{{formatDate created_at}}</span>
    </div>
    <div class="mt-4 p-4 bg-gray-50 rounded">
      <p class="text-gray-800">{{reclamation}}</p>
    </div>
  </div>
{{else}}
  <p class="text-center text-gray-500">Aucune réclamation enregistrée</p>
{{/each}}